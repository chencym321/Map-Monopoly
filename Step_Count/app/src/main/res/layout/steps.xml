<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/pb_step"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:visibility="visible"
        android:max="10000"
        android:progress="5000"
        android:secondaryProgress="10000"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/myprogressbar"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Steps:"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tv_goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10000"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/tv_s"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tv_g"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Goal:"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/tv_goal"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tv_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_s"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tv_courage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\nLet's Walk More!"
        android:layout_below="@id/tv_step"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"/>

    <ImageView
        android:id="@+id/iv_edit"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/ic_edit"
        android:layout_toRightOf="@id/tv_goal"
        android:layout_below="@id/tv_g" />

</RelativeLayout>